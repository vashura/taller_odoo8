<?xml version="1.0"?>
<openerp>
<data>
    <record model="ir.ui.view" id="mi_modulo_mi_tabla_form">
        <field name="name">mi_modulo.mi_tabla.form</field>
            <field name="model">mi_modulo.mi_tabla</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="mi_modulo mi_tabla">
                    <separator string="Formulario" colspan="14"/>
                    <field name="name"/>
                    <label>Este es un formulario de prueba</label>
                    <group string="Estado" colspan="2">
                        <field name="active" on_change="onchange_active(active)"/>
                        <field name="state"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Detalles">
                            <field name="description" colspan="4"/>
                            <newline />
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="tabla_relacionada_id" attrs="{'invisible': [('state', '=', 'draft')], 'required': [('state', '=', 'active')], 'readonly': [('state','=','cancelled')]}"/>
                        </page>
                        <page string="Proveedores" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <field name="partner_ids" nolabel="1" />
                        </page>
                        <page string="Fechas">
                            <field name="date"/>
                            <button name="next_monday_date" string="Poner la fecha del prÃ³ximo lunes" type="object" icon="gtk-ok" states="active"/>
                            <field name="datetime"/>
                        </page>
                    </notebook>
                </form>
          </field>
    </record>
    <record model="ir.ui.view" id="mi_modulo_mi_tabla_tree">
        <field name="name">mi_modulo.mi_tabla.tree</field>
        <field name="model">mi_modulo.mi_tabla</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="mi_modulo mi_tabla" colors="blue:state=='draft'">
                <field name="active"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="mi_modulo_mi_tabla_graph">
        <field name="name">mi_modulo.mi_tabla.graph</field>
        <field name="model">mi_modulo.mi_tabla</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph type="bar" orientation="horizontal">
                <field name="state"/>
                <field name="quantity" operator="+"/>
                <field name="price" operator="min"/>
            </graph>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_mi_tabla_seq">
        <field name="name">Mi Tabla</field>
        <field name="res_model">mi_modulo.mi_tabla</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>
    <menuitem id="menu_mi_modulo_module" name="Mi Modulo"/>
    <menuitem id="menu_mi_modulo_tables" name="Mi Modulo" parent="menu_mi_modulo_module"/>
    <menuitem id="menu_mi_modulo_mi_tabla" parent="menu_mi_modulo_tables" name="Mi Tabla" action="action_mi_tabla_seq"/>

    <!-- Tabla Relacionada -->
    <record model="ir.ui.view" id="mi_modulo_mi_tabla_relacionada_form">
        <field name="name">mi_modulo.mi_tabla_relacionada.form</field>
            <field name="model">mi_modulo.mi_tabla_relacionada</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="mi_modulo mi_tabla_relacionada">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="state"/>
                    <group string="Objetos relacionados" colspan="4">
                        <field name="related" nolabel="1"/>
                    </group>
                </form>
          </field>
    </record>
    <record model="ir.ui.view" id="mi_modulo_mi_tabla_relacionada_tree">
        <field name="name">mi_modulo.mi_tabla_relacionada.tree</field>
        <field name="model">mi_modulo.mi_tabla_relacionada</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree colors="blue:state=='draft'">
                <field name="active"/>
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_mi_tabla_relacionada_seq">
        <field name="name">Mi Tabla Relacionada</field>
        <field name="res_model">mi_modulo.mi_tabla_relacionada</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_mi_modulo_mi_tabla_relacionada" parent="menu_mi_modulo_tables" name="Mi Tabla Relacionada" action="action_mi_tabla_relacionada_seq"/>

    <!-- vista extendida de res.partner -->
    <record model="ir.ui.view" id="mi_modulo_res_partner_form">
        <field name="name">mi_modulo.res_partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <separator string="Puesto antes del nombre" colspan="10"/>
                </field>
                <field name="name" position="after">
                        <separator string="Puesto despues del nombre" colspan="10"/>
                        <field name="comment" />
                        <newline />
                </field>
                <page string="Notes" position="replace">
                    <page string="mi tabla">
                        <field name="mi_tabla_ids" nolabel="1" />
                    </page>
                </page>
          </field>
    </record>

</data>
</openerp>
